#include <iostream>
using namespace std;

int main()
{
	// your code goes here
	int t;
	cin>>t;
	
	for(int i=0;i<t;i++)
	{
	    long int n,k,x,y,p,q=1;
	    cin>>n>>k>>x>>y;
	    
	    for(long int j=0;j<n;j++)
	    {
	        p= (x+((j+1)*k))%n;
	        if(y==p)
	        {
	            q=0;
	        }
	    }
	    
	    if(q==1)
	    {
	        cout<<"NO\n";
	    }
	    else
	    {
	        cout<<"YES\n";
	    }
	}
	return 0;
}
